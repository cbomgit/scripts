#!/bin/bash

if [ -f $HOME/.dmenurc ];then
   source $HOME/.dmenurc
   DMENU="$DMENU -p 'Session Menu'"
else
   DMENU="dmenu -i -p 'Session Menu'"
fi

CMD=$(printf "Lock Screen\nLogout ${USER^}\nsuspend\nreboot\npoweroff" | eval $DMENU)


case "$CMD" in
   "Lock Screen")
      i3lock -ut -i ~/Pictures/wallpapers/aperture_science.png
   ;;
   "Logout ${USER^}")
      eval $LOGOUT_CMD 
   ;;
   *)
   sudo systemctl $CMD
   ;;
esac
