#!/bin/bash


if [ -f $HOME/.dmenurc ];then
   source  $HOME/.dmenurc
   DMENU="$DMENU -p 'System Configuration'"
else
   DMENU="dmenu -i -p 'System Configuration'"
fi

FILE=$(cat $HOME/.dmenu_editrc | eval $DMENU)

if [ $? -eq 0 ]; then
   OWNER=$(stat -c %U $FILE)

   if [ "$OWNER" == "root" ];then
      urxvt -e sudo vim $FILE
   else
      urxvt -e vim $FILE
   fi
fi
